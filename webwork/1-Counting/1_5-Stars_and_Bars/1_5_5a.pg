Context("IntegerFunctions");
$n = random(7,9);
do {$a = random(4,7);} until ($a < $n-1);
$m = $n-1; #total number of digits available
$j = $m-1; #number of bars we have for part b
$p = $j + $a; #total number of stars and bars for part b
$ans1 = Compute("C([$m],[$a])");
$ans2 = Compute("C([$p],[$a])");

####################
